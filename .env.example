### Database Settings
# 
# - DB_HOST: Either IP, Hostname or Unix-Socket
# - DB_HOST: Can be left empty if using default port 3306 or Unix socket
# - DB_PASS: Can be left empty if using Unix socket

DB_HOST = localhost
# DB_PORT = 3306
DB_NAME = vmail
DB_USER = vmail_app
# DB_PASS = 


### App Settings
#
# - PASSWORD_LENGTH: Length of automatically generated pasword
# - MAX_QUOTA_MB: Max quota in MB for an account that can be set via this app
# - DELETE_ACCOUNT: On true: Accounts can be deleted via this app
# - DELETE_DOMAIN: On true: Domains can be deleted via this app
# - ALLOWED_DOMAINS: comma-separated list of domains that be managed via this app. On '*', all domains can be
#                    managed and new ones can be added

PASSWORD_LENGTH = 16
MAX_QUOTA_MB = 51200

DELETE_ACCOUNT = false
DELETE_DOMAIN = false

ALLOWED_DOMAINS= *
